#!/bin/bash

SCRIPT_DIR=`dirname ${BASH_SOURCE[0]-$0}`

set -e
for xspec in $( find $1 -type f -name '*.xspec' ); do
  echo "################################################"
  printf "\n"
  echo "TEST $(basename -- $xspec)"
  printf "\n"
  /bin/bash $SCRIPT_DIR/xspec -e -t $xspec || exitcode=$?
  printf "\n\n"
done

echo "################################################"
printf "\n"
if [ "$exitcode" == "0" ]; then
    echo "Result: SUCCES"
else
    echo "Result: FAILED"
fi

exit $exitcode